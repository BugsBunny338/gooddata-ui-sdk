{
    "name": "@gooddata/sdk-model",
    "version": "8.0.0-alpha.0",
    "author": "GoodData",
    "description": "GoodData SDK TypeScript skeleton",
    "repository": "https://github.com/gooddata/gooddata-ui-sdk/tree/master/libs/sdk-model",
    "license": "BSD-3-Clause",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src",
        "LICENSE"
    ],
    "config": {
        "tslint": "./{src,test}/**/*.ts"
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "rm -rf dist && tsc -p tsconfig.build.json && npm run api-extractor",
        "api-extractor": "mkdir -p api && [ -z \"${CI}\" ] && (api-extractor run -l) || (api-extractor run)",
        "test": "jest --watch",
        "test-once": "jest",
        "test-ci": "JEST_JUNIT_OUTPUT=./ci/results/test-results.xml jest --config jest.ci.json",
        "tslint": "tslint -p . -t verbose $npm_package_config_tslint",
        "tslint-ci": "mkdir -p ./ci/results && tslint -p . -t checkstyle -o ./ci/results/tslint-results.xml $npm_package_config_tslint",
        "prettier-check": "prettier --check '{src,test}/**/*.{ts,tsx,json,scss,md,yaml,html}'",
        "prettier-write": "prettier --write '{src,test}/**/*.{ts,tsx,json,scss,md,yaml,html}'",
        "validate": "tsc --noEmit && npm run tslint && npm run prettier-check",
        "validate-ci": "tsc --noEmit && npm run tslint-ci && npm run prettier-check"
    },
    "jest": {
        "preset": "ts-jest",
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.ts"
        ],
        "testRegex": "\\.test.ts$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "html",
            "json"
        ],
        "globals": {
            "ts-jest": {
                "packageJson": "package.json"
            }
        }
    },
    "dependencies": {
        "lodash": "^4.17.15",
        "stringify-object": "^2.4.0",
        "spark-md5": "^3.0.0",
        "ts-invariant": "^0.4.4"
    },
    "devDependencies": {
        "@gooddata/tslint-config": "1.0.0",
        "@microsoft/api-extractor": "^7.3.8",
        "@types/jest": "^24.0.6",
        "@types/lodash": "^4.14.123",
        "@types/node": "^10.14.18",
        "@types/spark-md5": "^3.0.1",
        "@types/stringify-object": "^3.2.0",
        "jest": "^24.7.1",
        "jest-junit": "^3.0.0",
        "prettier": "~1.18.2",
        "ts-jest": "^24.1.0",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "3.6.3"
    }
}
